<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>com.resnidar.aeroCalc.Servlets.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>porteTheoriqueVor</servlet-name>
        <servlet-class>com.resnidar.aeroCalc.Servlets.porteTheoriqueVorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>porteTheoriqueVor</servlet-name>
        <url-pattern>/porteTheoriqueVor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>endurance</servlet-name>
        <servlet-class>com.resnidar.aeroCalc.Servlets.EnduranceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>endurance</servlet-name>
        <url-pattern>/endurance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>altitudePression</servlet-name>
        <servlet-class>com.resnidar.aeroCalc.Servlets.AltitudePressionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>altitudePression</servlet-name>
        <url-pattern>/altitudePression</url-pattern>
    </servlet-mapping>
</web-app>